<br>
<div class="container">
    <div class="row">
        <h3 id="brwr" data-id="{{borr_id}}">Borrower ID: {{borr_id}}</h3>
    </div>
    <div class="row">
        <p>Viewing all dogs:</p>
    </div>
    <div class="row">
        <div class="col-12">
            <ul class="list-group">
                {{#each dogs}}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-2">
                            <h4>{{name}}</h4>
                            <p>(ID: {{id}})</p>
                        </div>
                        <div class="col-4"><img src="{{photoURL}}" alt="Image" width="200px"></div>
                        <div class="col-3">
                            <p>Breed: {{breed}}</p>
                            <p>Gender: {{gender}}</p>
                            <p>Temperament: {{temperament}}</p>
                            <p>Available: {{#if available}}Yes{{/if}}{{#unless available}}No{{/unless}}</p>
                        </div>
                        <div class="col-3">
                            <br>
                            {{#if available}}<button class="btn10" type="button" data-id="{{id}}" 
                            pet-name="{{name}}" prov-id="{{provider_id}}">
                                Reserve</button>{{/if}}
                            
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
            <br><br>
        </div>
    </div>
