<br>
<div class="container">
    <div class="row">
        <h3 id="prvdr" data-id="{{prov_id}}">Provider ID: {{prov_id}}</h3>
    </div>
    <div class="row">
        <p>Viewing pets reserved for pickup by borrowers:</p>
    </div>
    <div class="row">
        <div class="col-12">
            <ul class="list-group">
                <div class="row">
                        <div class="col-1" style="text-align:center">Transaction ID:</div>
                        <div class="col-2" style="text-align:center">Pet:</div>
                        <div class="col-1" style="text-align:center">Borrower ID:</div>
                        <div class="col-1" style="text-align:center"></div>
                        <div class="col-1" style="text-align:center"></div>
                        <div class="col-3" style="text-align:center">Created At:</div>
                        <div class="col-3" style="text-align:center">Updated At:</div>
                    </div>
                {{#each transactions}}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-1">{{id}}</div>
                        <div class="col-2"><p><b>{{pet_name}}</b></p>
                            <p>(Pet ID: {{pet_id}})</p></div>
                        <div class="col-1">{{borrower_id}}</div>
                        <div class="col-2">
                            <button class="btn10" type="button" data-id="{{id}}">
                                Picked Up</button>
                        </div>
                        <div class="col-3">{{createdAt}}</div>
                        <div class="col-3">{{updatedAt}}</div>
                    </div>
                </li>
                {{/each}}
            </ul>
            <br><br>
        </div>
    </div>
</div>

